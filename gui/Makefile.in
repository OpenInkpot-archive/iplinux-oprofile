all:

.PHONY: all clean install uninstall

clean:

prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@
MKDIR_P=mkdir -p

install: oprofile
	-$(MKDIR_P) $(BINDIR)
	cp oprofile $(BINDIR)/oprofile
	cd $(BINDIR) && chmod 755 oprofile

uninstall:
	-rm -f $(BINDIR)/oprofile
	@echo "---------------------------------------------------------------"
	@echo "The uninstall target does not remove your ~/.oprofile directory"
	@echo "---------------------------------------------------------------"

