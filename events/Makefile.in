CFLAGS=-ansi -pedantic -Wall -O2 -pipe -Wstrict-prototypes -Wunused -W -Wshadow -Wmissing-prototypes -Winline @CFLAGS@

.PHONY: all clean install uninstall

all: op_help

install: all
	-$(MKDIR_P) $(BINDIR)
	cp op_help $(BINDIR)/op_help && chmod 755 $(BINDIR)/op_help

uninstall:
	rm -f $(BINDIR)/op_help

clean:
	rm -f *.o *.d op_help

op_help: op_events.o op_events_desc.o op_help.o
	$(CC) $(CFLAGS) $(INCLUDES) -g $^ -o $@

%.o: %c
	$(CC) -c $(CFLAGS) $(INCLUDE) -g $< -o $@

ALL_SOURCES = op_events.c op_events_desc.c op_help.c

include ../Rules.make
